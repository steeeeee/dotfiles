// Inserire le impostazioni in questo file per sovrascrivere quelle predefinite
{
    // Font Settings
    "editor.fontFamily": "'Operator Mono', Mensch, Input, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.fontWeight": "100",
    "editor.lineHeight": 20,
    "editor.fontLigatures": true,
    
    // Cursor Style
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",

    // Themes
    "workbench.colorTheme": "Panda Syntax",
    "workbench.iconTheme": "vscode-great-icons",

    // Behaviour Settings
    "editor.wordWrap": "on",
    "editor.smoothScrolling": true,

    // General Settings
    "terminal.integrated.shell.osx": "/bin/zsh",
    "editor.renderWhitespace": "boundary",
    "editor.renderIndentGuides": false,
    // "workbench.colorCustomizations": {
    //     "editorIndentGuide.activeBackground": "#333"
    // },

    // GIT
    "git.enabled": true,
    "git.autofetch": true,

    // Formats
    "html.format.indentInnerHtml": true,
    "html.format.endWithNewline": true,

    // ESLint
    "eslint.options": { },
    "window.zoomLevel": 0,

    // Intellisense
    "html.suggest.angular1": false,
    "html.suggest.ionic": false,
    "editor.tabCompletion": true,

    // Minimap
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,

    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "vue-html": "html",
        "plaintext": "jade"
    },

    "workbench.panel.defaultLocation": "right",

    "scss.showErrors": true
}
